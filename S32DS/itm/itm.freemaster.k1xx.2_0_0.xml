<sdks>
	<sdk
		basePath="${FREEMASTER_DIR_2.0.0}"
		cores="S32K144::,S32K142::,S32K146::,S32K148::,S32K116::,S32K118::"
		description="FreeMASTER Serial Communication Driver for S32xx"
		internalPath="false"
		name="FreeMaster_S32xx"
		version="2.0.0">
		<fragments>
			<fragment id="gcc_app_lib" name="gcc_app_lib" >
				<actions>
					<attachActions executionStep="before">
						<createProjectFolder path="include" buildPath="true"/>
						<addOptionValue id="gnu.c.compiler.option.include.paths" value="&quot;${ProjDirPath}/include&quot;"/>
					</attachActions>
				</actions>
			</fragment>
			<fragment id="ghs_app" name="ghs_app" >
				<actions>
					<attachActions executionStep="before">
						<createProjectFolder path="include" buildPath="true"/>
						<addOptionValue id="ghs.managedmake.arm.executable.toolchain.cc_compiler.project.include_directories" value="&quot;${ProjDirPath}/include&quot;"/>
					</attachActions>
				</actions>
			</fragment>
			<fragment id="ghs_lib" name="ghs_lib" >
				<actions>
					<attachActions executionStep="before">
						<createProjectFolder path="include" buildPath="true"/>
						<addOptionValue id="ghs.managedmake.arm.static_library.toolchain.cc_compiler.project.include_directories" value="&quot;${ProjDirPath}/include&quot;"/>
					</attachActions>
				</actions>
			</fragment>
				<fragment id="iar_app_lib" name="iar_app_lib" >
				<actions>
					<attachActions executionStep="before">
						<createProjectFolder path="include" buildPath="true"/>
						<addOptionValue id="iar.arm.toolchain.compiler.option.incPaths.v8.0.0" value="&quot;${ProjDirPath}/include&quot;"/>
					</attachActions>
				</actions>
			</fragment>
		</fragments>
		<toolchain alias="Debug (GCC 6.3) App" id="com.nxp.s32ds.cle.arm.mbs.arm32.bare.toolchain.debug">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Release (GCC 6.3) App" id="com.nxp.s32ds.cle.arm.mbs.arm32.bare.toolchain.release">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Debug_RAM (GCC 6.3) App" id="com.nxp.s32ds.cle.arm.mbs.arm32.bare.toolchain.debug.ram">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Release_RAM (GCC 6.3) App" id="com.nxp.s32ds.cle.arm.mbs.arm32.bare.toolchain.release.ram">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Debug (GCC 6.3) Lib" id="com.nxp.s32ds.cle.arm.mbs.arm32.bare.toolchain.lib.debug">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Release (GCC 6.3) Lib" id="com.nxp.s32ds.cle.arm.mbs.arm32.bare.toolchain.lib.release">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Debug/Debug_RAM (GCC 4.9) App" id="com.freescale.s32ds.cross.gnu.arm.cortexm.toolChain.debug">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Release (GCC 4.9) App" id="com.freescale.s32ds.cross.gnu.arm.cortexm.toolChain.release">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Debug (GCC 4.9) Lib" id="com.freescale.s32ds.cross.gnu.arm.cortexm.toolChain.lib.debug">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Release (GCC 4.9) Lib" id="com.freescale.s32ds.cross.gnu.arm.cortexm.toolChain.lib.release">
			<fragmentRef id="gcc_app_lib" />
		</toolchain>
		<toolchain alias="Debug (GHS) App" id="com.nxp.s32ds.cle.arm.mbs.ghs.toolchain.debug">
			<fragmentRef id="ghs_app" />
		</toolchain>
		<toolchain alias="Release (GHS) App" id="com.nxp.s32ds.cle.arm.mbs.ghs.toolchain.release">
			<fragmentRef id="ghs_app" />
		</toolchain>
		<toolchain alias="Debug_RAM (GHS) App" id="com.nxp.s32ds.cle.arm.mbs.ghs.toolchain.debug.ram">
			<fragmentRef id="ghs_app" />
		</toolchain>
		<toolchain alias="Release_RAM (GHS) App" id="com.nxp.s32ds.cle.arm.mbs.ghs.toolchain.release.ram">
			<fragmentRef id="ghs_app" />
		</toolchain>
		<toolchain alias="Debug (GHS) Lib" id="com.nxp.s32ds.cle.arm.mbs.ghs.toolchain.debug.lib">
			<fragmentRef id="ghs_lib" />
		</toolchain>
		<toolchain alias="Release (GHS) Lib" id="com.nxp.s32ds.cle.arm.mbs.ghs.toolchain.release.lib">
			<fragmentRef id="ghs_lib" />
		</toolchain>
		<toolchain alias="Debug/Debug_RAM (IAR) App" id="iar.arm.toolchain.project.exe.configuration.debug.toolchain.v8.0.0">
			<fragmentRef id="iar_app_lib" />
		</toolchain>
		<toolchain alias="Release (IAR) App" id="iar.arm.toolchain.project.exe.configuration.release.toolchain.v8.0.0">
			<fragmentRef id="iar_app_lib" />
		</toolchain>
		<toolchain alias="Debug (IAR) Lib" id="iar.arm.toolchain.project.library.configuration.debug.toolchain.v8.0.0">
			<fragmentRef id="iar_app_lib" />
		</toolchain>
		<toolchain alias="Release (IAR) Lib" id="iar.arm.toolchain.project.library.configuration.release.toolchain.v8.0.0">
			<fragmentRef id="iar_app_lib" />
		</toolchain>
		<headerFolder
			copy="false"
			path="src_common">
		</headerFolder>
		<headerFolder
			copy="false"
			path="src_platforms/S32xx">
		</headerFolder>
		<sourceFolder
			copy="false"
			path="src_common">
		</sourceFolder>
		<sourceFolder
			copy="false"
			path="src_platforms/S32xx">
		</sourceFolder>
		<resourceFile
			copy="true"
			copyToProjectPath="include"
			path="src_platforms/S32xx/freemaster_cfg.h.example"
			renameTo="freemaster_cfg.h"
			toOpen="true">
		</resourceFile>
	</sdk> 
</sdks>